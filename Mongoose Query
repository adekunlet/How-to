// few ways to create a new document

  var dog = new Dog({
    name: 'Bingo'
  });

  dog.save(function(err, savedDog) {
    if (err) {
      next(err)
    } else {
      res.json(savedDog);
    }
  });
  /////////////////////

  Dog.create({name: 'Bingo'}, function(err, savedDog) {

  })
  //////////////////////

  var dog = new Dog();

  dog.name = 'Bingo';

  dog.save(function(err, savedDog) {

  });
  
  ///////////////////////////////////////////////////////////////////////////////////////////////
  ///////////////////////////////////////////////////////////////////////////////////////////////
  
  Model.findByIdAndUpdate('28393928392', {name: 'new name'}, function(err, updatedDoc){
  if (err) {
    next(err)
  } else {
    res.json(updatedDoc);
  }
});

