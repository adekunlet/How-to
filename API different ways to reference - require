var mod1 = '';
var mod2 = '';
var mod3 = '';

exports mod1 = mod1;
exports mod2 = mod2;
exports mod3 = mod3;

///////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////

// mod.js
exports mod1 = '',
exports mod2 = '',
exports mod3 = '',

//app.js
var mod = require('./mod.js');
mod.mod1
mod.mod2
mod.mod3

///////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////

// mod.js
module.exports = { mod1 : '', mod2 : '', mod3 : '' };

//app.js
var mod = require('./mod.js');
mod.mod1
mod.mod2
mod.mod3

///////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////

// mod.js
module.exports = function(nums) { mod1 : '', mod2 : '', mod3 : '' };

//app.js
require=('./mod.js')([1,2,3]);

or

//app.js
var func = require('./mod');
func([1,2,3]);
